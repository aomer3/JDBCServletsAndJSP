<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>PreInitialization</display-name>

	<!-- Preinitializing a servlet using web.xml -->
	<servlet>
		<servlet-name>PreInitializedServlet</servlet-name>
		<servlet-class>com.trainings.servlets.preinitialization.PreInitializedServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>PreInitializedServlet</servlet-name>
		<url-pattern>/preInitializedServlet</url-pattern>
	</servlet-mapping>
</web-app>